<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8EBC5A"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/logo"
        />
    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/logo"
        android:scaleType="fitXY"
        android:src="@drawable/image"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:textAlignment="center"
        android:layout_below="@+id/image1"
        android:textSize="26sp"
        android:text="Kendalikan uang dan karu debitmu"
        android:textColor="#e2f7c6"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/text1"
        android:textColor="#e2f7c6"
        android:text="Gak lagi khawatir boros atau kehilangan kartu! Atur dengan Card Center"
        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text2"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="25dp"
            android:layout_height="4dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#7aa24c"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="25dp"
            android:layout_height="4dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#7aa24c"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="25dp"
            android:layout_height="4dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#7aa24c"
            />

        <Button
            android:id="@+id/button4"
            android:layout_width="25dp"
            android:layout_height="4dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#c1dfa2"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="25dp"
            android:layout_height="4dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#7aa24c"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRegis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:padding="13dip"
        android:text="REGISTER"
        android:textSize="21dp"
        android:textColor="#d6eebc"
        android:background="@drawable/bg_transparent"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRegis"
        android:textAlignment="center"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:text="SAYA SUDAH PUNYA AKUN"
        android:textColor="#d6eebc"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:textAlignment="center"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:text="Version 2.28.1 (7447)"
        android:textColor="#bbdc94"
        />


</RelativeLayout>